{
    "name": "pixel-api",
    "version": "1.0.0",
    "type": "module",
    "scripts": {
        "dev": "tsx src/server.ts",
        "build": "tsc",
        "start": "node dist/server.js",
        "prod": "npm run build && pm2 start dist/server.js --name pixel-api --update-env",
        "pm2:stop": "pm2 stop pixel-api",
        "pm2:restart": "pm2 restart pixel-api",
        "pm2:logs": "pm2 logs pixel-api",
        "migrate": "tsx umzug.ts up",
        "migrate:down": "tsx umzug.ts down"
    },
    "dependencies": {
        "cors": "^2.8.5",
        "dotenv": "^16.3.1",
        "express": "^4.18.2",
        "sequelize": "^6.32.1",
        "sqlite3": "^5.1.6"
    },
    "devDependencies": {
        "@types/cors": "^2.8.19",
        "@types/express": "^5.0.3",
        "ts-node": "^10.9.2",
        "tsx": "^4.20.4",
        "typescript": "^5.9.2",
        "umzug": "^3.8.2"
    }
}
